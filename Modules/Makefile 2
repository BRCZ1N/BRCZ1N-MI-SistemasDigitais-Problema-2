# Nome do arquivo fonte
SOURCE = gpu.c

# Nome do arquivo de assembly de saída
ASM_OUTPUT = gpu.s 

# Compilador
CC = gcc

# Opções de compilação (sem otimização)
CFLAGS = -S -g -fno-inline

# Regra padrão
all: $(ASM_OUTPUT)

# Regra para extrair o assembly
$(ASM_OUTPUT): $(SOURCE)
	$(CC) $(CFLAGS) $(SOURCE) -o $(ASM_OUTPUT)

# Limpar arquivos gerados
clean:
	rm -f $(ASM_OUTPUT)
